  <%= form_with(model: @task, local: true) do |form| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= @task.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="task_title">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="task_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
      <div class="task_deadline">
      <%= form.label :deadline %>
      <%= form.datetime_field :deadline %>
    </div>
    <div class="task_state">
      <%= form.label :state %>
      <%= form.select :state, ["未着手","着手中","完了"], {include_blank: '選択して下さい'} %>
    </div>
    <div class="task_priority">
      <%= form.label :priority %>
      <%= form.select :priority, ["低","中","高"], {include_blank: '選択して下さい'} %>
    </div>

    <%= form.submit %>
  <% end %>
  <%= link_to "タスク一覧画面へ", tasks_path %>
