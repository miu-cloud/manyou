<h1>タスク一覧</h1>
<p><%= notice %></p>
<%= form_with(method: :get, local: true) do |f| %>
    <%= t 'view.task.task_name' %>
    <%= f.text_field :search %>
    <%= t 'view.task.state' %>
    <%= f.select :state, [["not_started", 0 ], ["at_work", 1], ["done", 2]], include_blank: "" %>
    <%= f.submit t 'Search'%>
<% end %>
<table>
  <tr>
    <th><%= t('view.task.title') %></th>
    <th><%= t('view.task.content') %></th>
    <th><%= t('view.task.deadline') %></th>
    <th><%= t('view.task.created_at') %></th>
    <th><%= t('view.task.state') %></th>
    <th><%= t('view.task.priority') %></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td class= "task_row"><%= task.content %></td>
    <td class= "sort_expired_row"><%= task.deadline %></td>
    <td ><%= task.created_at %></td>
    <td><%#= task.state %></td>
    <td><%#= task.priority %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to "タスクを削除する", task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to '新しくタスクを追加する', new_task_path %>
