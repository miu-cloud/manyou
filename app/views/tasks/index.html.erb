<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th><%= t('task.title') %></th>
    <th><%= t('task.content') %></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細を確認する', task_path(task.id) %></td>
    <td><%= link_to "タスクを編集する", edit_task_path(task.id) %></td>
    <td><%= link_to "タスクを削除する", task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくタスクを追加する', new_task_path %>